<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        android:id="@+id/parentLayout"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
            android:id="@+id/behindLight"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    <LinearLayout
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
                android:orientation="horizontal"
                android:layout_marginBottom="55dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <TextView
                    android:id="@+id/battery"
                    android:layout_width="wrap_content"
                    android:text="祈祷晴天 : 100%+/33℃"
                    android:textColor="#fff"
                    android:shadowColor="#333333"
                    android:shadowRadius="40"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:textSize="35dp"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:layout_marginLeft="50dp"
                    android:id="@+id/alarmNext"
                    android:layout_width="wrap_content"
                    android:text="下一闹钟 : 周三 12:09"
                    android:textColor="#fff"
                    android:shadowColor="#333333"
                    android:shadowRadius="40"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:textSize="35dp"
                    android:layout_height="wrap_content"/>


        </LinearLayout>

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="280dp">


            <TextView
                    android:id="@+id/time_ampm"
                    android:textColor="#fff"
                    android:layout_alignParentRight="true"
                    android:layout_width="match_parent"
                    android:text="AM"
                    android:paddingRight="10dp"
                    android:gravity="right"
                    android:shadowColor="#333333"
                    android:shadowRadius="40"
                    android:shadowDx="0"
                    android:layout_marginBottom="-70dp"
                    android:shadowDy="0"
                    android:textSize="60dp"
                    android:layout_height="wrap_content"/>


            <TextView
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:text="00:00"
                    android:textColor="#fff"
                    android:layout_marginTop="-65dp"
                    android:textStyle="bold"
                    android:shadowColor="#333333"
                    android:shadowRadius="40"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:textSize="290dp"
                    android:layout_height="wrap_content"/>


        </LinearLayout>


        <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:text="2000-10-00 XXXXXX(X) 农历XXXX"
                android:textSize="45dp"
                android:layout_marginTop="20dp"
                android:textColor="#fff"
                android:layout_height="wrap_content"/>



    </LinearLayout>

    <!--全局遮罩 - 极限亮度控制 -->
    <TextView
            android:id="@+id/allLight"
            android:layout_width="match_parent"
            android:background="#000000"
            android:visibility="gone"
            android:layout_height="match_parent"/>

    <RelativeLayout
            android:visibility="gone"
            android:id="@+id/alarmLayout"
            android:layout_width="match_parent"
            android:background="#a0000000"
            android:layout_height="match_parent">

        <LinearLayout
                android:orientation="horizontal"
                android:layout_margin="20dp"
                android:gravity="center"
                android:background="@drawable/rad_bg1"
                android:layout_width="match_parent"
                android:layout_height="120dp">

            <TextView
                    android:id="@+id/alarmInfo"
                    android:layout_weight="5"
                    android:text="你设置的闹铃(周四 11:50)已生效"
                    android:layout_width="1dp"
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:gravity="center_vertical"
                    android:textSize="33dp"
                    android:paddingLeft="46dp"
                    android:layout_height="match_parent"/>

            <TextView
                    android:id="@+id/stopMusic"
                    android:text="关闭闹钟"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="33dp"
                    android:paddingLeft="15dp"
                    android:textColor="#4499ff"
                    android:background="@drawable/rad_bg2"
                    android:layout_width="220dp"
                    android:layout_height="match_parent"/>


        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>

